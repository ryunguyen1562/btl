<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0FFFF"
    android:padding="15dp"
    tools:context=".QuestionActivity">

    <TextView
        android:id="@+id/txtView_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Điểm: 0"
        android:freezesText="true"
        android:textColor="@color/black">
    </TextView>

    <TextView
        android:id="@+id/txtView_question_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Câu hỏi : 1/10"
        android:layout_below="@+id/txtView_score"
        android:freezesText="true"
        android:textColor="@color/black">
    </TextView>

    <TextView
        android:id="@+id/txtView_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtView_question_count"
        android:text="Chủ đề: a"
        android:textColor="@color/black"
        android:freezesText="true">
    </TextView>

    <TextView
        android:id="@+id/txtView_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00 : 30"
        android:textSize="45dp"
        android:textColor="@color/black"
        android:freezesText="true"
        android:layout_alignParentEnd="true">
    </TextView>

    <TextView
        android:id="@+id/txtView_question"
        android:layout_marginBottom="15dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:text="Câu hỏi 1"
        android:layout_above="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/radio_button1"
            android:freezesText="true"
            android:text="Lựa chọn 1"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </RadioButton>
        <RadioButton
            android:id="@+id/radio_button2"
            android:freezesText="true"
            android:text="Lựa chọn 2"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </RadioButton>
        <RadioButton
            android:id="@+id/radio_button3"
            android:freezesText="true"
            android:text="Lựa chọn 3"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </RadioButton>
        <RadioButton
            android:id="@+id/radio_button4"
            android:freezesText="true"
            android:text="Lựa chọn 4"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </RadioButton>
    </RadioGroup>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:text="Xác nhận"
        android:freezesText="true"
        android:layout_below="@+id/radio_group"
        android:backgroundTint="@color/aquamarine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Button>
</RelativeLayout>